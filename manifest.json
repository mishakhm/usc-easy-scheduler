{
    "name": "Getting Started Example",
    "description": "Build an Extension!",
    "version": "1.0",
    "manifest_version": 3,

    "background": {
        "service_worker": "background.js"
      },

    "host_permissions": ["https://webreg.usc.edu/*", "https://web-app.usc.edu/*", "https://my.usc.edu/*"],

    "permissions": ["storage"],

    "action": {
        "default_title": "Show calendar page"
    },

    "icons": {
      "16": "/assets/images/get_started16.png",
      "32": "/assets/images/get_started32.png",
      "48": "/assets/images/get_started48.png",
      "128": "/assets/images/get_started128.png"
    },
    
    "web_accessible_resources": [{
      "resources": ["font/*"],
      "matches": ["<all_urls>"]
    }]
  }