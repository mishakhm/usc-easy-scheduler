{
    "name": "USC Easy Scheduler",
    "description": "Create your ideal class schedule conveniently",
    "version": "1.0",
    "manifest_version": 3,

    "background": {
        "service_worker": "background.js"
      },

    "host_permissions": ["https://webreg.usc.edu/*", "https://web-app.usc.edu/*", "https://my.usc.edu/*"],

    "permissions": ["storage"],

    "action": {
        "default_title": "Open USC Easy Scheduler"
    },

    "icons": {
      "16": "/assets/images/calendar16.png",
      "32": "/assets/images/calendar32.png",
      "48": "/assets/images/calendar48.png",
      "128": "/assets/images/calendar128.png"
    },
    
    "web_accessible_resources": [{
      "resources": ["font/*"],
      "matches": ["<all_urls>"]
    }]
  }